{
  "editor.mouseWheelZoom": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "files.autoSave": "onFocusChange",
  "workbench.iconTheme": "material-icon-theme",
  "editor.fontFamily": "'Source Code Pro', monospace",
  "editor.fontLigatures": false,
  "editor.letterSpacing": 0.4,
  "editor.smoothScrolling": false,
  "editor.cursorBlinking": "solid",
  "editor.fontWeight": "400",
  "explorer.compactFolders": false,
  "git.confirmSync": false,
  "editor.formatOnSave": true,
  "editor.fontSize": 14,
  "editor.lineHeight": 22,
  "editor.minimap.enabled": false,
  "editor.guides.indentation": true,
  "editor.wordWrap": "off",
  "editor.rulers": [],
  "editor.renderWhitespace": "boundary",
  "workbench.colorTheme": "Gruvbox Dark Hard",
  "terminal.integrated.fontFamily": "'Source Code Pro', monospace",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.background": "#1e1e1e",
  "terminal.integrated.cursorBackground": "#f8f8f8",
  "terminal.integrated.cursorForeground": "#000000",
  "terminal.integrated.scrollback": 10000,
  "zenMode.hideStatusBar": true,
  "zenMode.hideActivityBar": true,
  "zenMode.fullScreen": true,
  "zenMode.centerLayout": false,
  "editor.bracketPairColorization.enabled": true
}
